<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.my.evc.mapper.AdminMapper">

	<insert id="create" parameterType="com.my.evc.model.Admin" keyProperty="id" useGeneratedKeys="true">
		insert into admin
			(username,password,last_login) 
		values
			(#{username},#{password},#{lastLogin})
	</insert>
	
	<delete id="delete" parameterType="int">
		delete from admin where id=#{id}
	</delete>
	
	<update id="update" parameterType="com.my.evc.model.Admin">
		update admin 
		set 
			username=#{username},
			password=#{password}
		where 
			id=#{id}
	</update>
	
	<update id="updateLastLogin" parameterType="int">
		update admin set
			last_login=sysdate() 
		where 
			id=#{id}
	</update>
	
	<sql id="all_fields">
		username as username,
		password as password, 
		last_login as lastLogin
	</sql>
	
	<select id="find" parameterType="int" resultType="com.my.evc.model.Admin">
		select
			<include refid="all_fields"/>
		from admin where id=#{id}
	</select>
	
</mapper>